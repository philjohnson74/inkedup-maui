<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inkedup_maui.PenDetailPage"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <!-- <ToolbarItem IconImageSource="share.svg"  Order="Primary" x:Name="TbShare" Clicked="TbShare_Clicked"/> -->
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,Auto">
        <Image Grid.Row="0" x:Name="ImgPen" HeightRequest="300" Aspect="Fill"/>
        <Label Grid.Row="1" x:Name="LblBrandName" Margin="10" FontSize="Title" FontAttributes="Bold" TextDecorations="Underline"/>
        <Label Grid.Row="2" x:Name="LblModel" Margin="10" FontSize="Body"/>
    </Grid>
    
</ContentPage>